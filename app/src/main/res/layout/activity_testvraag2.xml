<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be.kdg.ip_r_androidapp.vragen.Testvraag">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/testvraag"
        android:id="@+id/tvTestvraag"
        android:textSize="25sp"
        android:text="@string/voorbeeldtestvraag"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTestvraag"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/lvVoordeel1"
                android:paddingTop="@dimen/activity_vertical_margin">
            </ListView>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/lvNadeel1"
                android:paddingTop="@dimen/activity_vertical_margin">
            </ListView>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/btnKeuze1"
            android:paddingTop="@dimen/activity_vertical_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/lvVoordeel2"
                android:paddingTop="@dimen/activity_vertical_margin">
            </ListView>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id="@+id/lvNadeel2"
                android:paddingTop="@dimen/activity_vertical_margin">
            </ListView>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:id="@+id/btnKeuze2"
            android:paddingTop="@dimen/activity_vertical_margin"/>

    </LinearLayout>
</RelativeLayout>